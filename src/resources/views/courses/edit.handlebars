<div class="mt-4">
  <h3>Cap nhat khoa hoc</h3>
  <form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="description">Ten khoa hoc</label>
      <input
        type="text"
        class="form-control"
        value="{{course.name}}"
        id="description"
        name="name"
      />
    </div>
    <div class="form-group">
      <label for="description">Mo ta khoa hoc</label>
      <input
        type="text"
        class="form-control"
        value="{{course.description}}"
        id="description"
        name="description"
      />
    </div><div class="form-group">
      <label for="description">Video ID</label>
      <input
        type="text"
        class="form-control"
        value="{{course.videoId}}"
        id="description"
        name="videoId"
      />
    </div><div class="form-group">
      <label for="description">Trinh do</label>
      <input
        type="text"
        class="form-control"
        id="description"
        value="{{course.level}}"
        name="Level"
      />
    </div>

    <button type="submit" class="btn btn-primary">Luu chinh sua khoa hoc</button>
  </form>
</div>